{
    "manifest_version": 2,
    "name": "Just Report It",
    "description": "The proper way to report spam!",
    "default_locale": "en-US",
    "version": "3.1.4",
    "author": "Nicolas Provencher",
    "browser_specific_settings": {
        "gecko": {
            "id": "admin@justreport.it",
            "strict_min_version": "122.0"
        }
    },
    "background": {
        "scripts": [
          "scripts/background.js"
        ]
      },
    "icons": {
        "64": "images/spam.png",
        "32": "images/spam-32px.png",
        "16": "images/spam-16px.png"
    },
    "options_ui": {
        "page": "options/options.html",
        "open_in_tab": false
    },
    "message_display_action": {
        "default_title": "Report it",
        "default_icon": "images/spam-32px.png"
    },
    "permissions": [
        "messagesMove",
        "messagesRead",
        "messagesDelete",
        "messagesUpdate",
        "accountsRead",
        "accountsFolders",
        "storage",
        "menus",
        "sensitiveDataUpload"
    ]
}
